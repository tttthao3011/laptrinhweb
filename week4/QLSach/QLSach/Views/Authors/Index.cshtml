@model IEnumerable<QLSach.Models.Author>

@{
    ViewBag.Title = "Tác giả";
}

<h2>Tác giả</h2>

<p>
    @Html.ActionLink("Thêm tác giả", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Tên tác giả")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.AuthorId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.AuthorId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.AuthorId })
        </td>
    </tr>
}

</table>
